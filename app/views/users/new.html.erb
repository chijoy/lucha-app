<div class="devise">
  <div class="content">
    <ul class="nav navbar-nav navbar-right">
      <li class="navbar-text"><%= render "layouts/language"   %></li>
    </ul>
      <h1>
        Employee Sign In <br />
        <small>
          Please fill in the following to create an employee account.
        </small>
      </h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { :class => "form-horizontal", role: "form"}) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <%= f.label :first_name %><br>
        <%= f.text_field :first_name, autofocus: true, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :last_name %><br>
        <%= f.text_field :last_name, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :home_phone %><br>
        <%=f.text_field :home_phone, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :cell_phone %><br>
        <%=f.text_field :cell_phone, :class => "form-control" %>
      </div>

      <hr>

      <h1>
        <small>
          The following information will be your login information, make sure to keep this safe with you.
        </small>
      </h1>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="form-group">
        <%= f.submit "Sign up", :class => 'btn btn-large btn-primary' %>
      </div>
    <% end %>

    <hr>

    <h5>Already have an account? <%= link_to "Log In", "/users/sign_in" %></h5>
  </div>
</div>
