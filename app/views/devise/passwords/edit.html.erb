<div class="devise center-block">
  <div class="content">

    <h1><%= I18n.t "password_change.change_your_password" %></h1>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>

      <div class="form-group field">
        <div class="input">
          <%= f.label I18n.t("password_change.new_password") %><br />
          <%= I18n.t "password_change.eight_characters_minimum" %><br />          
          <%= f.password_field :password, autofocus: true, autocomplete: "off", :class => "form-control" %>
        </div>
      </div>

      <div class="form-group field">
        <div class="input">
          <%= f.label I18n.t("password_change.confirm_new_password") %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.submit I18n.t("password_change.change_my_password"), :class => "btn btn-primary" %>
      </div>
    <% end %>

    <hr>

    <div class="sign-in-footer">
      <h5 class="devise-links pull-left">
      <%= render "devise/shared/links" %>
      </h5>
    </div>

  </div>
</div>
